{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",   // Adicione suporte para arquivos .js
    "**/*.jsx"   // Adicione suporte para arquivos .jsx
  ]
}